<section>

    <div id="search"></div>



    <!--<div class="couponContainerRead" >-->

    <div class="columns is-mobile is-multiline is-vcentered">


        <div class="column is-mobile">
            <!--can't perform without this-->

            <form action="/coupon/search" method="GET">
